@using Version2.Data.Models
@model IEnumerable<CompanyDto>

<a href="Company/CreateorEdit">Create</a>

<table class="table table-bordered table-sm small">
    <thead>
        <tr>
            @*   <th scope="col">#</th>*@
            <th scope="col">Company</th>
            

            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var company in Model)
        {
            <tr>
                @* <td class="col-md-1 col-1">
            @employee.Id
            </td>*@
                <td class="col-md-5 col-5">
                    @company.Name
                </td>
                 
                <td class="col-md-1" align="center">
                    <a href=@Url.ActionLink("CreateorEdit", "Company", new { company.Id } )>
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
                <td class="col-md-1" align="center">
                    <a href=@Url.ActionLink("Delete", "Company", new { company.Id })
                   onclick="return confirm('Are you sure you want to delete this Message?')">
                        <i class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
