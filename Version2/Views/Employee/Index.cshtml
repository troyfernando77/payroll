@using Version2.Data.Models
@model IEnumerable<EmployeeDto>

<a href="Employee/CreateorEdit">Create</a>

<table class="table table-bordered table-sm small">
        <thead>
            <tr>
             @*   <th scope="col">#</th>*@
                <th scope="col">Number</th>
                <th scope="col">Name</th>
                <th scope="col">Company</th>
                <th scope="col">Department</th>

              @*  <th scope="col">Rate</th>*@
                <th scope="col"></th>
                
            </tr>
        </thead>
        <tbody>
   
        @foreach (var employee in Model)
            {
                <tr>
                   
                    <td class="col-md-1 col-1">
                        @employee.EmployeeNumber
                    </td>
                    <td class="col-md-4">
                        @employee.EmployeeName
                    </td>
                    <td class="col-md-4">
                        @employee.Company
                    </td>
                    <td class="col-md-2">
                        @employee.Department
                    </td>
                   
                    <td class="col-md-2" align="center">
                        
                        <div class="row">
                            <div class="col-6">
                                <a title="Edit" href=@Url.ActionLink("CreateorEdit", "Employee", new { employee.Id } )>
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>  
                            </div> <div class="col-6">
                                <a title="Delete" href=@Url.ActionLink("Delete", "Employee", new { employee.Id })
                                onclick="return confirm('Are you sure you want to delete this Message?')">
                                <i class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                                </a>
                            </div>
                        </div>
                     
                    </td>
                </tr>
            }
        </tbody>
    </table>
  