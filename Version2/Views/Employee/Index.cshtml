@using Version2.Data.Models
@model IEnumerable<EmployeeDto>

<a href="Employee/CreateorEdit">Create</a>

<table class="table table-bordered  table-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Code</th>
                <th scope="col">Name</th>
                <th scope="col">Rate</th>

                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
   
        @foreach (var employee in Model)
            {
                <tr>
                    <td class="col-md-1">
                        @employee.Id
                    </td>
                    <td class="col-md-1 ">
                        @employee.EmployeeId
                    </td>
                    <td class="col-md-4">
                        @employee.EmployeeName
                    </td>
                    <td class="col-md-1" align="right">
                        @employee.Rate.ToString("N2") 
                    </td>
                    <td class="col-md-1" align="center">
                        <a href=@Url.ActionLink("CreateorEdit", "Employee", new { employee.Id } )>
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>  
                        </td>
                    <td class ="col-md-1" align="center">
                        <a href=@Url.ActionLink("Delete", "Employee", new { employee.Id })
                           onclick="return confirm('Are you sure you want to delete this Message?')">
                            <i class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 