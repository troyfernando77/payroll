@using Version2.Data.Models
@model IEnumerable<DTRHeadDTO>

<a href="DTRHead/CreateorEdit">Create</a>

    <table class="table table-bordered" style="font-size:small">
        <thead>
        <tr>
                 
            <th scope="col">Cutoff</th>
            <th scope="col">Amount</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
   
        @foreach (var dtrhead in Model)
        {
            <tr>
                <td class="col-md-3 ">
                    @dtrhead.Cutoff
                </td>
                <td class="col-md-3 ">
                    @dtrhead.TotalAmount
                </td>
                <td class="col-md-1" align="center">
                    <a href=@Url.ActionLink("Index", "DTRSummary", new {DTRHeadId= dtrhead.Id } )>
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                </td>
            
                <td class="col-md-1" align="center">
                    <a href=@Url.ActionLink("CreateorEdit", "DTRHead", new { dtrhead.Id } )>
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>  
                </td>
                <td class ="col-md-1" align="center">
                    <a href=@Url.ActionLink("Delete", "DTRHead", new { dtrhead.Id })
                        onclick="return confirm('Are you sure you want to delete this Message?')">
                        <i class="fa fa-trash" style="color:red" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
 